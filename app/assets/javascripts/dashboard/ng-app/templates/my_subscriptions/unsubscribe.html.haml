.remodal-overlay{"style"=>"display: none;"}
  .remodal.action-form{"data-remodal-id"=>"cancel-subscription-modal", "data-remodal-options"=>"hashTracking: false", "ng-controller"=>"UnsubscribeController" }
    %section.active
      %header
        %h2
          Cancel Subscription?
        %h4
          Are your sure you want to cancel {{selected_subscription.subscriber.firstName}} {{selected_subscription.subscriber.lastName}} to your plan {{selected_subscription.plan.name}}?
      %footer
        %button.previous{"ng-click"=>"dismissModal()"}
          Cancel
        %button.continue{"ng-click"=>"cancelSubscriptionSubmit()"}
          Yes, Cancel
          %i.fa-arrow-right
    %div{"loading-screen" => "loading.showSpinner"}
