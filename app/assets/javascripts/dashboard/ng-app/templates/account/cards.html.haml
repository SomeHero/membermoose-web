%header.content-title
  %i.fa.fa-credit-card.header-icon
  .content-title-wrapper
    %h4
      Payment Methods
    %h6
      Here are the plans you've signed up for.
.container-fluid.plans{"style"=>"min-height: 400px;"}
  .row{:style=>"margin-bottom: 20px;", "ng-show"=>"user.account.cards.length > 0"}
    .col-md-4{"ng-repeat"=>"card in user.account.cards"}
      .plan{:style=>"padding: 20px 0px;"}
        .plan-info
          .card-default{"ng-show"=>"card.default"}
            Default
          %i.fa.fa-credit-card{:style=>"font-size: 48px;"}
          %h4.card-name
            {{card.nameOnCard}}
          %h5.card-brand
            {{card.brand}} ****{{card.last4}}
        %button.btn.btn-lg.btn-primary{"ui-sref"=>"dashboard.cards.update({card: {{card}} })"}
          Update Card
        %button.btn.btn-lg.btn-alert{"ui-sref"=>"dashboard.cards.destroy({card: {{card}} })"}
          Delete Card
  .row{:style=>"margin-bottom: 20px;", "ng-show"=>"user.account.cards.length == 0"}
    .col-md-12
      .no-results
        %img{:alt => "No Payment Methods", :src => asset_path('dead-moose.png')}/
        %p
          You have not setup any payment methods yet!
%main.remodal-bg
  .remodal{"data-remodal-id" => "modal"}
    .moose-dialog
      .fa.fa-heater
    .remodal-overlay
      %ui-view#modal
