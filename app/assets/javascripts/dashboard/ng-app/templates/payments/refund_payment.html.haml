.action-form{"data-remodal-id"=>"refund-payment-modal", "data-remodal-options"=>"hashTracking: false" }
  %section.active
    %header
      %h2
        Refund Payment?
      %h4
        Are your sure you want to refund {{selected_payment.amount | currency}} to {{selected_payment.payee.fullName}}?
    %footer
      %button.previous{"ng-click"=>"refundPaymentCancel()"}
        Cancel
      %button.continue{"ng-click"=>"refundPaymentSubmit()"}
        Refund
        %i.fa-arrow-right
    %div{"loading-screen" => "loading.show_spinner"}
