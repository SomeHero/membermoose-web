.action-form{"data-remodal-id"=>"cancel-subscription-modal", "data-remodal-options"=>"hashTracking: false" }
  %section.active
    %header
      %h2
        Cancel Subscription?
      %h4
        Are your sure you want to cancel {{subscription.subscriberName}} from your plan {{subscription.plan.name}}?
    %footer
      %button.previous{"ng-click"=>"dismissModal()"}
        Cancel
      %button.continue{"ng-click"=>"cancelSubscriptionSubmit()"}
        Yes, Cancel
        %i.fa-arrow-right
    %div{"loading-screen" => "loading.show_spinner"}
