.action-form{"data-remodal-id"=>"hold-subscription-modal", "data-remodal-options"=>"hashTracking: false" }
  %section.active
    %header
      %h2
        Hold Subscription?
      %h4
        Are your sure you want to hold {{subscription.subscriberName}}'s subscription to the plan {{subscription.plan.name}}?
    %footer
      %button.previous{"ng-click"=>"dismissModal()"}
        Cancel
      %button.continue{"ng-click"=>"holdSubscriptionSubmit()"}
        Yes, Hold
        %i.fa-arrow-right
    %div{"loading-screen" => "loading.show_spinner"}
