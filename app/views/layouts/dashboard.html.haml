!!!
%html
  %head
    %title Member Moose - Dashboard
    = stylesheet_link_tag    'application-dashboard', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "https://fonts.googleapis.com/css?family=Raleway:400,500,700", :rel => "stylesheet", :type => "text/css"}/
  %body
    %nav.navbar.navba.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .row
          .navbar-header.col-sm-3.col-md-2
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand MemberMoose
          .navbar-collapse.collapse
            %ul#top-nav.nav.navbar-nav.navbar-right
              %li
                %a{:href=>"#"}
                  = fa_icon "bell-o"
              %li
                %a{:href=>"#"}
                  = fa_icon "envelope-o"
              %li
                = link_to destroy_user_session_path, :method => 'delete' do
                  = fa_icon "sign-out"
    %div#content-wrapper.container-fluid
      %div.row.row-offcanvas.row-offcanvas-left
        %div#sidebar.col-sm-3.col-md-2.sidebar-offcanvas{"role" => "navigation"}
          #profile-block.text-center
            %img{:src => asset_path('rva_logo.png')}/
            %h4.user-name
              = current_user.account.first_name + " " + current_user.account.last_name
            %h5.company-name
              = current_user.account.company_name
            %h6.mm-stats
              34<br />
              Your Moose Pack
          %ul.nav.nav-sidebar
            %li
              %a{"href"=>"/launch_list"}
                LAUNCH LIST
            %li
              %a{"href"=>"/plans"}
                PLANS
            %li
              %a{"href"=>"/members"}
                MEMBERS
            %li
              %a{"href"=>"/subscriptions"}
                SUBSCRIPTIONS
            %li
              %a
                PAYMENTS
            %li
              = link_to "ACCOUNT", edit_account_url(:id => current_user.id)
        %div.col-sm-9.col-md-10.col-sm-offset-3.col-md-offset-2
          %div#content
            = yield
