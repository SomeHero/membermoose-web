%header.content-title
  ACCOUNT
= form_tag account_path, :method => :put, multipart: true do
  .form-group
    %label{:for=>"firstName"}
      First Name
    %input#firstName.form-control.input-lg{:type=>"text",:name=>"user[account_attributes[first_name]]",:placeholder=>"First Name", :value => current_user.account.first_name }
  .form-group
    %label{:for=>"lastName"}
      Last Name
    %input#lastName.form-control.input-lg{:type=>"text",:name=>"user[account_attributes[last_name]]",:placeholder=>"Last Name", :value => current_user.account.last_name }
  .form-group
    %label{:for=>"companyName"}
      Company Name
    %input#companyName.form-control.input-lg{:type=>"text",:name=>"user[account_attributes[company_name]]",:placeholder=>"Company Name", :value => current_user.account.company_name}
  .form-group
    %label{:for=>"email"}
      Email Address
    %input#email.form-control.input-lg{:type=>"text",:name=>"user[email]",:placeholder=>"Email Address", :value => current_user.email }
  .form-group
    = image_tag current_user.account.logo.url if current_user.account.logo
    %label{:for=>"logo"}
      Logo
    %input#email.form-control.input-lg{:type=>"file",:name=>"user[account_attributes[logo]]" }

  %button.btn.btn-default{:type=>"submit"}
    Submit
