<div class="container-fluid login-container login-page" style="background-color: #edf0f5">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <%= link_to(root_path) do %>
        <%= image_tag('logo-black.png', width: "300", style:"margin-bottom: 20px;") %>
      <% end %>
      <%= form_for(resource, as: resource_name, :html => { :class => 'login-form'}, url: new_user_registration_path) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <% f.label :first_name, class: 'control-label' %><br />
          <%= text_field_tag "user[account[first_name]]", nil, autofocus: true, placeholder: 'First Name', class: 'form-control input-dark input-lg' %>
        </div>
        <div class="form-group">
          <% f.label :last_name, class: 'control-label' %><br />
          <%= text_field_tag "user[account[last_name]]", nil, autofocus: true, placeholder: 'Last Name', class: 'form-control input-dark input-lg' %>
        </div>
        <div class="form-group">
          <% f.label :company_name, class: 'control-label' %><br />
          <%= text_field_tag "user[account[company_name]]", nil, autofocus: true, placeholder: 'Company Name', class: 'form-control input-dark input-lg' %>
        </div>
        <div class="form-group">
          <% f.label :email, class: 'control-label' %><br />
          <%= f.email_field :email, placeholder: 'you@example.com', :class => 'form-control input-dark input-lg' %>
        </div>

        <div class="form-group">
          <% f.label :password, class: 'control-label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', :class => 'form-control input-dark input-lg' %>
        </div>

        <div class="form-group">
          <% f.label :password_confirmation, class: 'control-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', :class => 'form-control input-dark input-lg' %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: 'btn btn-success btn-block text-center' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
