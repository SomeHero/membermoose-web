<div class="container-fluid login-container login-page" style="background-color: #edf0f5">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <%= link_to(root_path) do %>
        <%= image_tag('logo-black.png', width: "300", style:"margin-bottom: 20px;") %>
      <% end %>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), :html => { :class => 'login-form', method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %><br />
          <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), :class => 'form-control input-dark input-lg'  %>
        </div>

        <div class="form-group">
          <%= f.submit "Resend confirmation instructions", class: 'btn btn-success  btn-block text-center' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
