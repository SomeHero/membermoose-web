<div class="container-fluid login-container login-page" style="background-color: #edf0f5">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <%= link_to(root_path) do %>
        <%= image_tag('logo-black.png', width: "300", style:"margin-bottom: 20px;") %>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :class => 'login-form', method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'password', class: 'form-control input-dark input-lg' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password',  class: 'form-control input-dark input-lg' %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'btn btn-success btn-block text-center' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
